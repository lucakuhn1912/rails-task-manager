<div class="container">
  <%= form_for(@task) do |f| %>

    <div class="form-group" style="width:250px">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>
    </div>

    <div class="form-group" style="width:250px">
      <%= f.label :details %>
      <%= f.text_field :details, class:'form-control'  %>
    </div>

    <div class="form-group">
      <%= f.label :completed %>
      <%= f.check_box :completed, {}, true, false  %>
    </div>

    <%= f.submit class:"btn btn-primary"%>
  <% end %>
</div>
