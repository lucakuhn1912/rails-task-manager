<div class="container">
  <h1>My Tasks</h1>
  <% @tasks.each do |task| %>
    <%= link_to task_path(task) do %>
      <h2><%= task.title %></h2>
      <%= link_to task_path(task), method: :delete,
        data: { confirm: "Are you sure?" } do %>
        <i class="fas fa-trash-alt"></i>
      <% end %>
    <% end %>
    <p><%= task.completed ? "Completed" : "Incomplete" %></p>
    <p><%= task.details %></p>
  <% end %>

  <%= link_to "Create Task", new_task_path %>
</div>
